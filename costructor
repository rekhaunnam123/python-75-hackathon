#parametrized constructor:
class person:
    def __init__(self,n,a):
        self.name=n
        self.age=a
    def talk(self):
        print("hello i am ",self.name)
        print("hello my age",self.age)
p1=person('sudha',44)
p1.talk()
p2=person('lakshmi',22)
p2.talk()

#giving values through keyboard
n=input('enter name:')
a=input('enter age:')
p1=person(n,a)
p1.talk()
